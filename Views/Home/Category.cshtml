@model Category

<h1 class="text-center"><a asp-action="Index" asp-controller="Home">Products</a> | Categories</h1>
<div class="row">
    <div class="col">
        <h2 class="text-center">New Category</h2>
        <form asp-action="AddCategory" asp-controller="Home" method="post">
            <span class="col-4 text-danger" asp-validation-for="Name"></span>
            <br>
            <label class="col-3" asp-for="Name"></label>
            <input class="col-5" asp-for="Name">
            <br>
            <div class="text-center">
                <button class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    <div class="col">
        <h2 class="text-center">Existing Categories</h2>
        @foreach(var cat in @ViewBag.allCats)
        {
            <h3 class="text-center"><a asp-action="CategoryDetail" asp-route-id="@cat.CategoryId">@cat.Name</a></h3><br>
        }
    </div>
</div>